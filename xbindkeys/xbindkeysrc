# mic mute
"pactl set-source-mute 0 toggle"
	XF86AudioMicMute

# brightness up
"brightnessctl s +100"
	XF86MonBrightnessUp

#brightness down
"brightnessctl s 100-"
	XF86MonBrightnessDown

# display settings
"arandr"
	XF86Display

# file manager
"thunar"
	XF86Search

# mail client
"thunderbird"
	XF86LaunchA

# screen lock
"i3lock -i ~/Pictures/ss.png -t"
	XF86Explorer

# print screen
"xfce4-screenshooter -f"
	Print
