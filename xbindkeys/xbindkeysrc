# sound settings
"/usr/bin/pulseaudio-ctl up"
	XF86AudioRaiseVolume

"/usr/bin/pulseaudio-ctl down"
	XF86AudioLowerVolume

"/usr/bin/pulseaudio-ctl mute"
	XF86AudioMute

"/usr/bin/pulseaudio-ctl mute-input"
	XF86AudioMicMute

# display settings
"arandr"
	XF86Display

# power settings
"xfce4-power-manager-settings"
	XF86Tools

# file manager
"thunar"
	XF86Search

# mail client
"thunderbird"
	XF86LaunchA

# screen lock
"i3lock -i ~/Pictures/ss.png -t"
	XF86Explorer

# print screen
"xfce4-screenshooter -f"
	Print
