# mic mute
"pactl set-source-mute 0 toggle"
	XF86AudioMicMute

# brightness up
"brightnessctl s +100"
	XF86MonBrightnessUp

#brightness down
"brightnessctl s 100- --min-value=37"
	XF86MonBrightnessDown

# display settings
"arandr"
	XF86Display

# file manager
"thunar"
	XF86Search

# mail client
"thunderbird"
	XF86LaunchA

# print screen
"xfce4-screenshooter -f"
	Print
