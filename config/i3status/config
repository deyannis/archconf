battery 0 {
	format = "%status %percentage  %remaining  %consumption"
    status_chr = "ï‡¦ "
    status_bat = "ðŸ”‹ "
	integer_battery_capacity = true
	threshold_type = percentage
	low_threshold = 25
    min_width = 140
    align = "center"
    separator_block_width = 16
}

tztime local {
    format = "(%a) %d/%m/%Y %H:%M"
    separator_block_width = 16
}

tztime athens {
	format = "Athens: %H:%M"
	timezone = "Europe/Athens"
    separator_block_width = 16
}

