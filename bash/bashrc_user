# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# ls with color and human readable sizes
alias ls='ls -h --color=auto'

# Minimal command prompt
PS1='\u@\h -> '

# Prevent line wrap
shopt -s checkwinsize

# Tab autocomplete
complete -cf sudo
complete -cd man

# Editor
export EDITOR=vim
